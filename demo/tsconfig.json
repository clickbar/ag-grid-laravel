{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],
        "paths": {
            "@/*": ["resources/js/*"]
        }
    },
    "include": ["resources/js/**/*", "*.js", "*.ts"]
}
